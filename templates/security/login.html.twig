{% extends 'dashboard.base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block body_id 'login_page' %}
{% block body %}
    <div class="vertical-align-wrap">
        <div class="vertical-align-middle">
            <div class="auth-box ">
                <div class="left">
                    <div class="content">
                        <div class="form-group text-right">
                            <a id="backToHome" class="cursor-pointer">Back to homepage</a>
                        </div>
                        <div class="header">
                            <div class="logo text-center"><img src="{{ absolute_url(asset('images/logo.jpg')) }}" alt="{{ app_name }}"></div>
                            <p class="lead">Login to your account</p>
                        </div>
                        <form class="form-auth-small" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label for="signin-email" class="control-label sr-only">Email</label>
                                <input type="email" value="{{ last_username }}" placeholder="Email" name="_username" id="signin-email" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            <div class="form-group">
                                <label for="signin-password" class="control-label sr-only">Password</label>
                                <input type="password" name="_password" id="signin-password" placeholder="Password" class="form-control" autocomplete="current-password" required>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="form-group clearfix">
                                <label class="fancy-checkbox element-left">
                                    <input type="checkbox" name="_remember_me">
                                    <span>Remember me</span>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block btn-login">LOGIN</button>
                            <div class="form-group text-left mt-3">
                                <a href="{{ path('app_register') }}">Register yourself</a>
                            </div>
                            <div class="form-group text-left">
                                <a href="{{ path('app_forgot_password_request') }}">forgot your password link</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}